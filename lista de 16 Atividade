Atividade 49
v1 = int(input("Digite o primeiro numero: "))
v2 = int(input("Digite o segundo numero: "))
v3 = int(input("Digite o terceiro numero: "))
v4 = int(input("Digite o quarto numero: "))
v5 = int(input("Digite o quinto numero: "))
v6 = int(input("Digite o sexto numero: "))

# Verifica se todos os n√∫meros s√£o pares
if v1 % 2 == 0 and v2 % 2 == 0 and v3 % 2 == 0 and v4 % 2 == 0 and v5 % 2 == 0 and v6 % 2 == 0:
    print("Os n√∫meros s√£o pares")
else:
    print("Os n√∫meros s√£o √≠mpares")


import random

sorteio=random.randint(1, 100)

tentativas = 0
while tentativas < 10:
    jogador = int(input("Escreva um n√∫mero"))
    tentativas += 1
    if jogador > sorteio:
        print(" Voc√™ errou, o n√∫mero digitado √© maior que o numero sorteado")
    if jogador < sorteio:
        print(" Voc√™ errou, o n√∫mero digitado √© menor que o numero sorteado")
    if jogador == sorteio:
        print ("Acertou")
        break
        
    if tentativas == 10:
        print("N√£o foi dessa vezüò≠, Voc√™ atingiu o numero maximo de tentativas")























