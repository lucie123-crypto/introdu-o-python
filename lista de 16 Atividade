Atividade 28
n = int(input("Digite a primeira nota"))
n2 = int(input("Digite a segunda nota"))
media = (n+n2) / 2
if media > 4.9 :
    print("O Aluno esta reprovado")
if media >= 5.0 and media <= 6.9 :
    print("O Aluno está de recuperação")
else:
    print("Parabéns você esta aprovado")




Atividade 35
print("Olá Bem-vindo a nossa concenssionaria")
carro = input("Qual o foi o Carro alugado? (Popular ou Luxo): ")
dias = int(input("Quantos dias o carro foi alugado? "))
km = float(input("Quantos km foi percorrido? "))

if carro == "popular":
    valoralu = dias * 90
    if km <= 100:
        valorkm = km * 0.20
    elif km > 100:  
        valorkm = km * 0.10
    valor_total = valorkm + valoralu
    print("O total do seu aluguel foi:", valor_total)

if carro == "luxo":
    valoralu = dias * 150
    if km <= 200:
        valorkm = km * 0.30
    elif km > 100:  
        valorkm = km * 0.25
    valor_total = valorkm + valoralu
    print("O total do seu aluguel foi:", valor_total)

Atividade 36
print("Cada hora de atividade física no mês vale pontos")
horas = int(input("Quantas horas por mês você fez atividade física? "))
if horas <= 10:
    pontos = horas * 2
    ganho = pontos * 0.5
    print(f"Olá, você ganhou {pontos} pontos e {ganho}$ Reais")
elif 10 < horas <= 20:
    pontos = horas * 5
    ganho = pontos * 0.5
    print(f"Olá, você ganhou {pontos} pontos e {ganho}$ Reais")
else: 
    pontos = horas *10
    ganho = pontos *0.5 
    print(f"Olá, você ganhou {pontos} pontos e {ganho}$ Reais")


Atividade 37
print("Uhumm, Hora de saber seu aumento!")
genero = (input("Você e Homem ou Mulher?"))
salario = float(input("Qual o seu salário?"))
anos = int(input("Quantos anos Você está na empresa?"))

if genero == "mulher":
    if anos <= 15:
       aumento = salario *0.05
       aumento1 = salario+aumento
       print(f"O seu salario de {salario} Foi para {aumento1} ")
    elif 15 <= anos <= 20:
        aumento = salario *0.12
        aumento1 = salario+aumento
        print(f"O seu salario de {salario} Foi para {aumento1} ")
    else:
        aumento = salario*0.23
        aumento1 = salario+aumento
        print(f"O seu salario de {salario} Foi para {aumento1} ")

if genero == "homem":
    if anos <= 20:
       aumento = salario *0.03
       aumento1 = salario+aumento
       print(f"O seu salario de {salario} Foi para {aumento1} ")
    elif 20 <= anos <= 30:
        aumento = salario *0.13
        aumento1 = salario+aumento
        print(f"O seu salario de {salario} Foi para {aumento1} ")
    else:
        aumento = salario*0.25
        aumento1 = salario+aumento
        print(f"O seu salario de {salario} Foi para {aumento1} ")

