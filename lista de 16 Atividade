else: print ("Obrigado por andar corretamente")

Ativiade em sala
print("Olá vamos calcular a sua media anual")
n1 = float(input("Digite a primeira nota"))
n2 = float(input("Digite a segunda nota"))
n3 = float(input("Digite a terceira nota"))
n4 = float(input("Digite a quarta nota"))
media = (n1+n2+n3+n4) / 4
if media >= 6 :
    print("parabéns você foi aprovado,", media)
else :
    print("Infelizmente você foi reprovado,",media)

Atividade 18
print("Olá vamos saber se você ja pode votar")
hoje = float(input("Qual o ano de hoje?"))
nascimento = float(input("Qual o seu ano de nascimento?"))
data = hoje-nascimento
if data >= 16 :
    print("você ja pode votar,", data)
else :
    print("Você não pode votar,", data)

