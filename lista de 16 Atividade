print("Cada hora de atividade f√≠sica no m√™s vale pontos")
horas = int(input("Quantas horas por m√™s voc√™ fez atividade f√≠sica? "))
if horas <= 10:
    pontos = horas * 2
    ganho = pontos * 0.5
    print(f"Ol√°, voc√™ ganhou {pontos} pontos e {ganho}$ Reais")
elif 10 < horas <= 20:
    pontos = horas * 5
    ganho = pontos * 0.5
    print(f"Ol√°, voc√™ ganhou {pontos} pontos e {ganho}$ Reais")
else: 
    pontos = horas *10
    ganho = pontos *0.5 
    print(f"Ol√°, voc√™ ganhou {pontos} pontos e {ganho}$ Reais")


Atividade 37
print("Uhumm, Hora de saber seu aumento!")
genero = (input("Voc√™ e Homem ou Mulher?"))
salario = float(input("Qual o seu sal√°rio?"))
anos = int(input("Quantos anos Voc√™ est√° na empresa?"))

if genero == "mulher":
    if anos <= 15:
       aumento = salario *0.05
       aumento1 = salario+aumento
       print(f"O seu salario de {salario} Foi para {aumento1} ")
    elif 15 <= anos <= 20:
        aumento = salario *0.12
        aumento1 = salario+aumento
        print(f"O seu salario de {salario} Foi para {aumento1} ")
    else:
        aumento = salario*0.23
        aumento1 = salario+aumento
        print(f"O seu salario de {salario} Foi para {aumento1} ")

if genero == "homem":
    if anos <= 20:
       aumento = salario *0.03
       aumento1 = salario+aumento
       print(f"O seu salario de {salario} Foi para {aumento1} ")
    elif 20 <= anos <= 30:
        aumento = salario *0.13
        aumento1 = salario+aumento
        print(f"O seu salario de {salario} Foi para {aumento1} ")
    else:
        aumento = salario*0.25
        aumento1 = salario+aumento
        print(f"O seu salario de {salario} Foi para {aumento1} ")

